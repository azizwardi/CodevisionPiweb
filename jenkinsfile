pipeline {
    agent any
    stages {
        stage('Install Dependencies') {
            steps {
                sh '''
                    cd Backend
                    npm install
                '''
            }
        }
        stage('Unit Test') {
            steps {
                script {
                    sh 'npm test'
                }
            }
        }
        stage('Build Application') {
            steps {
                script {
                    sh 'npm run build-dev'
                }
            }
        }
    }
}
