pipeline {
    agent any
    stages {
        stage('Install Dependencies') {
            steps {
                dir('Backend') {
                    sh 'npm install'
                }
            }
        }
        stage('Unit Test') {
            steps {
                dir('Backend') {
                    script {
                        sh 'echo "No tests specified"'
                    }
                }
            }
        }
        stage('SonarQube Analysis') {
            steps{
                script {
                            def scannerHome = tool 'scanner'
                            withSonarQubeEnv {
                            sh "${scannerHome}/bin/sonar-scanner"
                            }
                        }
                }
        }

        stage('Build Application') {
            steps {
                dir('Backend') {
                    script {
                        sh 'npm run build'
                    }
                }
            }
        }
    }
}
