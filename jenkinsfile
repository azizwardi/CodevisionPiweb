pipeline {
    agent any
    stages {
        stage('Install Dependencies') {
            steps {
                dir('Backend') {
                    sh 'npm install'
                }
            }
        }
        stage('Unit Test') {
            steps {
                dir('Backend') {
                    script {
                        sh 'echo "No tests specified"'
                    }
                }
            }
        }
        stage('Build Application') {
            steps {
                dir('Backend') {
                    script {
                        sh 'chmod +x node_modules/.bin/webpack'
                        sh 'npm run build-dev'
                    }
                }
            }
        }
    }
}
